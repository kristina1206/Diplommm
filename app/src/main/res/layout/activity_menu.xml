<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22756E"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/buttonGOpet"
        android:layout_width="248dp"
        android:layout_height="61dp"
        android:onClick="goPet"
        android:text="PET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <Button
        android:id="@+id/buttonGOstore"
        android:layout_width="251dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:onClick="goStore"
        android:text="STORE"
        app:layout_constraintEnd_toEndOf="@+id/buttonGOpet"
        app:layout_constraintStart_toStartOf="@+id/buttonGOpet"
        app:layout_constraintTop_toBottomOf="@+id/buttonGOpet" />

    <Button
        android:id="@+id/buttonGOuser"
        android:layout_width="252dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:onClick="User"
        android:text="USER"
        app:layout_constraintEnd_toEndOf="@+id/buttonGOstore"
        app:layout_constraintStart_toStartOf="@+id/buttonGOstore"
        app:layout_constraintTop_toBottomOf="@+id/buttonGOstore" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334"
        app:srcCompat="@drawable/icons8_pet_shop_64" />

</androidx.constraintlayout.widget.ConstraintLayout>