<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22756E">

    <Button
        android:id="@+id/btnUserMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="Menu"
        android:text="Menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserFInd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="Back"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:onClick="Post"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edUserPostId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:drawableTint="#FFFFFF"
        android:ems="10"
        android:hint="Enter Id"
        android:inputType="number"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostUsername"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostUsername"
        app:layout_constraintStart_toStartOf="@+id/edUserPostUsername" />

    <EditText
        android:id="@+id/edUserPostUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostFirstName"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostFirstName"
        app:layout_constraintStart_toStartOf="@+id/edUserPostFirstName" />

    <EditText
        android:id="@+id/edUserPostFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter First name"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostLastName"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostLastName"
        app:layout_constraintStart_toStartOf="@+id/edUserPostLastName" />

    <EditText
        android:id="@+id/edUserPostLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Last name"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostEmail"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostEmail"
        app:layout_constraintStart_toStartOf="@+id/edUserPostEmail" />

    <EditText
        android:id="@+id/edUserPostEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostPassword"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostPassword"
        app:layout_constraintStart_toStartOf="@+id/edUserPostPassword" />

    <EditText
        android:id="@+id/edUserPostPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostPhone"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostPhone"
        app:layout_constraintStart_toStartOf="@+id/edUserPostPhone" />

    <EditText
        android:id="@+id/edUserPostPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Phone"
        android:inputType="text"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/edUserPostStatus"
        app:layout_constraintEnd_toEndOf="@+id/edUserPostStatus"
        app:layout_constraintStart_toStartOf="@+id/edUserPostStatus" />

    <EditText
        android:id="@+id/edUserPostStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#3E3C3C"
        android:ems="10"
        android:hint="Enter Status"
        android:inputType="number"
        android:textColorHint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/btnUserPost"
        app:layout_constraintEnd_toEndOf="@+id/btnUserPost"
        app:layout_constraintStart_toStartOf="@+id/btnUserPost" />

</androidx.constraintlayout.widget.ConstraintLayout>